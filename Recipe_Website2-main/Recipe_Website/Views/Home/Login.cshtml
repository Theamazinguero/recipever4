@{
    ViewData["Title"] = "Login";
}

<section class="d-flex justify-content-center align-items-center" style="min-height:70vh;">
    <div class="soft-card p-4" style="max-width:420px; width:100%;">
        <h2 class="text-center mb-2">Welcome back</h2>

        <p class="text-muted text-center mb-4" style="font-size:0.95rem;">
            Log in to save recipes and manage your meal plan.
        </p>

        <form method="post" asp-action="Login">
            <!-- Email -->
            <div class="mb-3">
                <label class="form-label fw-medium">Email</label>
                <input class="form-control" type="email" name="email"
                       placeholder="you@example.com" required />
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label class="form-label fw-medium">Password</label>
                <input class="form-control" type="password" name="password"
                       placeholder="••••••••" required />
            </div>

            <!-- Error -->
            <div class="text-danger small mb-2">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>

            <button class="btn btn-peach w-100" type="submit">
                Log in
            </button>
        </form>

        <p class="mt-3 text-center small">
            Don’t have an account?
            <a href="/Home/Register" class="fw-semibold" style="color:#ff8750;">Sign up</a>
        </p>
    </div>
</section>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] - Recipe Planner</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* ------------------------------
                                   GLOBAL STYLE
                                ------------------------------- */
        body {
            background-color: #fff9f4;
            font-family: 'Inter', 'DM Sans', sans-serif;
            margin: 0;
            color: #2e2e2e;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'DM Sans', sans-serif;
            font-weight: 600;
            color: #2e2e2e;
        }

        a {
            text-decoration: none;
        }

        /* HERO / HOMEPAGE */
        .hero {
            padding: 4.5rem 0 3rem;
        }

        .hero-title {
            font-size: 2.6rem;
            letter-spacing: -0.03em;
        }

        .hero-subtitle {
            max-width: 650px;
            margin: 0 auto;
            color: #8a7563;
        }

        /* ------------------------------
                                   NAVBAR STYLE
                                ------------------------------- */
        .navbar {
            background: #ffffff;
            border-bottom: 1px solid #f2eae2;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
        }

        .navbar-brand {
            font-size: 1.4rem;
            font-weight: 700;
            color: #ff9966 !important;
            letter-spacing: -0.5px;
        }

        .nav-link {
            font-weight: 500;
            color: #444;
        }

            .nav-link:hover {
                color: #ff9966;
            }

        /* Buttons */
        .btn-peach {
            background-color: #ff9966;
            border-color: #ff9966;
            color: #fff;
            border-radius: 999px;
            font-weight: 500;
            padding: 0.45rem 1.2rem;
        }

            .btn-peach:hover {
                background-color: #ff8750;
                border-color: #ff8750;
                color: #fff;
            }

        .btn-outline-peach {
            border-radius: 999px;
            border-color: #ff9966;
            color: #ff9966;
            font-weight: 500;
        }

            .btn-outline-peach:hover {
                background-color: #ff9966;
                color: #fff;
            }

        /* ------------------------------
                                   CARD STYLE
                                ------------------------------- */
        .soft-card {
            background: #fff;
            border-radius: 18px;
            border: none;
            box-shadow: 0 10px 30px rgba(15, 23, 42, 0.05);
            padding: 1.5rem;
            transition: 0.15s ease;
        }

            .soft-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 16px 40px rgba(15, 23, 42, 0.1);
            }

        /* ------------------------------
                                   FOOTER
                                ------------------------------- */
        footer {
            text-align: center;
            padding: 2rem 0;
            margin-top: 3rem;
            color: #8a8a8a;
            font-size: 0.9rem;
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg py-3">
        <div class="container">

            <!--  ICON -->
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="~/images/RecipePlannerIcon.png"
                     alt="Recipe Planner Icon"
                     class="me-2"
                     style="height:32px; width:auto;" />
                Recipe Planner
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navMenu">
                <ul class="navbar-nav me-auto ms-3 gap-2">
                    <li class="nav-item"><a class="nav-link" href="/Recipes">Browse</a></li>
                    <li class="nav-item"><a class="nav-link" href="/MealPlan">Meal Plan</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Recipes/Favorites">Favorites</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Recipes/MyRecipes">My Recipes</a></li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AdminPages" asp-action="Index">Admin</a>
                    </li>

                </ul>

                <div class="d-flex gap-2">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <span class="me-2 d-flex align-items-center">
                            Welcome, @User.Identity.Name!
                        </span>

                        <form method="post" asp-controller="Home" asp-action="Logout">
                            <button type="submit" class="btn btn-outline-peach">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-outline-peach" href="/Home/Login">Login</a>
                        <a class="btn btn-peach" href="/Home/Register">Sign Up</a>
                    }

                </div>


            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <div class="container pt-4 pb-5">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer>
        © 2025 Recipe Planner
    </footer>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
